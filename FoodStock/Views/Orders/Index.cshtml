@model IEnumerable<FoodStock.Models.Order>

@{
    ViewBag.Title = "List of Orders";
}

<h2>List of Orders</h2>

<form class="navbar-form" role="search">
    <div class="form-group">
        @using (Html.BeginForm("Index", "Orders", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
        {
            <div class="form-group">
                @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search Order by Person" })
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
</form>

<p>
    @Html.ActionLink("Create New Order", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
